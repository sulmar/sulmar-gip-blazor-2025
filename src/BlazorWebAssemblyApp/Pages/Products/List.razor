@page "/products"
@inject IAsyncProductService Api

<Header>List Products</Header>

@if (@products is null)
{
    <em>Loading...</em>
}
else
{
    <ProductsTable Products="@products" />
}

@code {


    private List<Product> products;

    protected override async Task OnInitializedAsync()
    {
        products = await Api.GetAll();
    }

}
