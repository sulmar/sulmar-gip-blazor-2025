@using Domain.Models

<ItemsTable Items="@Customers" >
    <HeaderTemplate>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </HeaderTemplate>

    <RowTemplate>
        <tr>
            <td>@context.Id</td>
            <td>@context.Name</td>
            <td>@context.Email</td>
        </tr>
    </RowTemplate>
</ItemsTable>

@code {

    [Parameter]
    public List<Customer> Customers { get; set;  }

}
