@page "/customers/{id:int}/edit"
@inject IAsyncCustomerService Api
@inject IAsyncRegionService RegionApi
@inject ISnackbar Snackbar
@inject NavigationManager Nav

<MudText Typo="Typo.h3">Edit Customer</MudText>

@if (customer is null)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <CustomerEditForm customer="@customer" regions="@regions" OnValidSubmit="@OnValidSubmit" />
}

@code {

    [Parameter]
    public int Id { get; set; }

    private Customer? customer;

    private List<Region>? regions;

    protected override async Task OnInitializedAsync()
    {
        regions = await RegionApi.GetAll();
    }

    protected override async Task OnParametersSetAsync()
    {
        customer = await Api.GetById(Id);
    }

    private async Task OnValidSubmit(EditContext context)
    {
        try
        {
            await Api.Update(customer!);

            Snackbar.Add($"Zmodyfikowana klienta {customer!.Name}", Severity.Success);

            Nav.NavigateTo("/customers");
        }
        catch(Exception e)
        {
            Snackbar.Add(e.Message, Severity.Error);
        }

        


    }

}
